@model ProjetoE_CommerceGameFesth.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}


<h1>Detalhes</h1>

<div>
    <h4>Produto</h4>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Codbarras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codbarras)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagemProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
    </dl>
</div>
<div class="col-lg-3 col-md-6 mb-4" style="margin:2% 4%">
    @using (Html.BeginForm("AdicionarItem", "Home", FormMethod.Post))
    {
        <input type="hidden" name="id" value=@Html.DisplayFor(model => model.Codbarras)>
        <input type="hidden" name="quantidade" value="1">
        <button type="submit" class="btn btn-default btn-acao-primario">adicionar ao carrinho 🛒</button>
    }
</div>

<div>
    
    <a asp-action="Index">Voltar</a>
