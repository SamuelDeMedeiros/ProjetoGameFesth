                            <div class="card shadow-0 border rounded-3 mb-4">
                                <div class="card-body">
                                    <div class="row g-0">
                                        <div class="col-xl-3 col-md-4 d-flex justify-content-center">
                                            <div class="bg-image hover-zoom ripple rounded ripple-surface me-md-3 mb-3 mb-md-0">
                                                @if (item.ImagemProduto != null)
                                                {
                                                    <img src="@item.ImagemProduto" class="w-100" />
                                                }
                                                else
                                                {
                                                    <img src="/Imagens/imagenotfound.png" alt="Imagem do Produto" class="img-fluid rounded-4" style="max-width: 100%; height: auto;" />
                                                }
                                                <a href="#!">
                                                    <div class="hover-overlay">
                                                        <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-md-5 col-sm-7">
                                            <h5>@item.NomeProduto</h5>
                                            <div class="d-flex flex-row">
                                                <span class="text-muted">@item.Marca</span>
                                                <br />
                                            </div>
                                            <p class="text mb-4 mb-md-0">@item.Descricao</p>
                                        </div>
                                        <div class="col-xl-3 col-md-3 col-sm-5">
                                            <div class="d-flex flex-row align-items-center mb-1">
                                                <h4 class="mb-1 me-1">@string.Format("{0:C}", item.Valor)</h4>
                                            </div>
                                            <h6 class="text-success">Entrega gratuita</h6>
                                            <h6 class="text-success">
                                                Quantidade em estoque: @item.QuantidadeEstoque
                                            </h6>
                                            <div class="mt-4">
                                                @using (Html.BeginForm("Detalhes", "Home", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="Id" value="@item.Codbarras" />
                                                    <button class="button" type="submit">
