                    <option value="Valor" >Valor</option>
                </select>

                <button type="submit" class="btn btn-primary">Pesquisar</button>

                <script>
                    // Utiliza jQuery para detectar mudanças no campo de pesquisa e submeter o formulário
                    $(document).ready(function () {
                        $('#pesquisa').on('input', function () {
                            $('#searchForm').submit(); // Envio automático do formulário quando o texto muda
                        });
                    });
                </script>
            }


        </div>
        <div class="row">
            <div class="col-lg-9">
