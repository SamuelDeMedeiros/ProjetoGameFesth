@model ProjetoE_CommerceGameFesth.Models.Cliente
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarDados">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCliente" />
            <div class="form-group">
                <input type="hidden" asp-for="tipo_login" />
                <label asp-for="NomeCliente" class="control-label"></label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input id="telefone" asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.Sexo == "M")
                {
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M" checked>
                        <span class="form-check-label">Masculino</span>
                    </label>
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                        <span class="form-check-label">Feminino</span>
                    </label>
                }
                else{
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                        <span class="form-check-label">Masculino</span>
                    </label>
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F"checked>
                        <span class="form-check-label">Feminino</span>
                    </label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-action="PainelCliente" value="Voltar" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>