@model IEnumerable<ProjetoE_CommerceGameFesth.Models.Venda>

@{
    ViewData["Title"] = "PainelCliente";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ProjetoE_CommerceGameFesth</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            margin-top: 50px;
        }

        .sidebar {
            border-right: 1px solid #ddd;
            padding-right: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: #333;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    color: #007bff;
                    font-weight: 600;
                    background-color: #f1f1f1;
                    border-radius: 4px;
                }

        .content {
            padding-left: 20px;
            animation: fadeIn 1s;
        }

            .content h2 {
                font-weight: 600;
                margin-bottom: 20px;
                position: relative;
            }

                .content h2::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -10px;
                    height: 3px;
                    width: 50px;
                    background-color: #007bff;
                    border-radius: 2px;
                }

            .content .info,
            .content .pedidos {
                margin-bottom: 20px;
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            }

            .content a {
                color: #007bff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .content a:hover {
                    text-decoration: underline;
                    color: #0056b3;
                }

        .btn-primary {
            border-radius: 50px;
            padding: 10px 30px;
        }

        .alert {
            border-radius: 50px;
        }

        .pedidos {
            display: none;
        }

        .pedido-item {
            display: block;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

            .pedido-item dt {
                font-weight: 600;
            }
    </style>
</head>
<body>

    <main role="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3 sidebar">
                    <h3>Minha conta</h3>
                    <a href="#" class="active animate__animated animate__fadeInLeft" id="infoContaLink">Informação da conta</a>
                    <a href="#" class="animate__animated animate__fadeInLeft" id="meusPedidosLink">Meus pedidos</a>
                </div>
                <div class="col-md-9 content">
                    <div class="info animate__animated animate__fadeInRight">
                        <h2>Informações da conta</h2>
                        <p>Seja bem-vindo(a), <span>@ViewBag.Nome</span></p>
                        <p>E-mail: @ViewBag.Email</p>
                        <p>Nascimento: @ViewBag.Nascimento</p>
                        <p>Sexo: @ViewBag.Sexo</p>
                        <p>Telefone: @ViewBag.Telefone</p>
                        <a asp-action="AtualizarDados" asp-controller="Home" asp-route-email="@ViewBag.Email">editar</a> | <a href="#">mudar senha</a>
                    </div>

                    <div class="pedidos animate__animated animate__fadeInRight">
                        <h2>Meus pedidos</h2>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <dl class="pedido-item">
                                    <dt>@Html.DisplayNameFor(model => model.ValorTotal)</dt>
                                    <dd>@Html.DisplayFor(modelItem => item.ValorTotal)</dd>
                                    <dt>@Html.DisplayNameFor(model => model.DataVenda)</dt>
                                    <dd>@Html.DisplayFor(modelItem => item.DataVenda)</dd>
                                </dl>
                            }
                        }
                        else
                        {
                            <p>Você não tem pedidos.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#infoContaLink').click(function (e) {
                e.preventDefault();
                $('.info').show();
                $('.pedidos').hide();
                $('#infoContaLink').addClass('active');
                $('#meusPedidosLink').removeClass('active');
            });

            $('#meusPedidosLink').click(function (e) {
                e.preventDefault();
                $('.info').hide();
                $('.pedidos').show();
                $('#meusPedidosLink').addClass('active');
                $('#infoContaLink').removeClass('active');
            });
        });
    </script>
</body>
</html>
