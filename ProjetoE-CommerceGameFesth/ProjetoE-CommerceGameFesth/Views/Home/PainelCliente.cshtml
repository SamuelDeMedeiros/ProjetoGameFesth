@{
    ViewData["Title"] = "PainelCliente";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ProjetoE_CommerceGameFesth</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            margin-top: 50px;
        }

        .sidebar {
            border-right: 1px solid #ddd;
            padding-right: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: #333;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    color: #007bff;
                    font-weight: 600;
                    background-color: #f1f1f1;
                    border-radius: 4px;
                }

        .content {
            padding-left: 20px;
            animation: fadeIn 1s;
        }

            .content h2 {
                font-weight: 600;
                margin-bottom: 20px;
                position: relative;
            }

                .content h2::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -10px;
                    height: 3px;
                    width: 50px;
                    background-color: #007bff;
                    border-radius: 2px;
                }

            .content .info {
                margin-bottom: 20px;
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            }

            .content a {
                color: #007bff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .content a:hover {
                    text-decoration: underline;
                    color: #0056b3;
                }

        .btn-primary {
            border-radius: 50px;
            padding: 10px 30px;
        }

        .alert {
            border-radius: 50px;
        }
    </style>
</head>
<body>

    <main role="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3 sidebar">
                    <h3>Minha conta</h3>
                    <a href class="active animate__animated animate__fadeInLeft">Informação da conta</a>
                    @using (Html.BeginForm("DetalhesVendas", "Home", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-default btn-acao-primario">Meus pedidos</button>
                        <input type="hidden" name="Id" value="@ViewBag.IdCliente"/>
                    }
                    @using (Html.BeginForm("AtualizarP", "Home", FormMethod.Get))
                    {
                        <button type="submit" class="btn btn-default btn-acao-primario">atualizar meu perfil</button>
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                    }
                    @*<a href class="animate__animated animate__fadeInLeft">Lista de desejos</a> *@

                </div>
                <div class="col-md-9 content">
                    <h2 class="animate__animated animate__fadeInRight">Informações da conta</h2>
                    <div class="info animate__animated animate__fadeInRight animate__delay-1s">
                        <p>Seja bem-vindo(a), <span>@ViewBag.Nome</span></p>
                        <p>E-mail: @ViewBag.Email</p>
                        <p>Nascimento: @ViewBag.Nascimento</p>
                        <p>Sexo: @ViewBag.Sexo</p>
                        <p>Telefone: @ViewBag.Telefone</p>
                        <a href>editar</a> | <a href>mudar senha</a>
                    </div>

                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
