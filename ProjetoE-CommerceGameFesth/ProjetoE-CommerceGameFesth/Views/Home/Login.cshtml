@model ProjetoE_CommerceGameFesth.Models.Login

<title>Login - @ViewData["Title"]</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .login-container {
        margin-top: 50px;
    }

    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: 600;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 50px;
    }

    .btn-primary {
        border-radius: 50px;
        padding: 10px 30px;
    }

    .btn-outline-primary {
        border-radius: 50px;
        padding: 10px 30px;
    }

    .form-text {
        text-align: right;
    }

    .error-message {
        color: red;
        font-size: 0.9em;
        display: none;
    }

    .modal-confirm {
        color: #636363;
        width: 400px;
        margin: 30px auto;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            border-radius: 5px;
            border: none;
        }

        .modal-confirm .modal-header {
            border-bottom: none;
            position: relative;
            justify-content: center;
        }

        .modal-confirm h4 {
            text-align: center;
            font-size: 26px;
            margin: 30px 0 -10px;
        }

        .modal-confirm .icon-box {
            color: #fff;
            position: absolute;
            margin: 0 auto;
            left: 0;
            right: 0;
            top: -50px;
            width: 95px;
            height: 95px;
            border-radius: 50%;
            z-index: 9;
            padding: 15px;
            text-align: center;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
        }

            .modal-confirm .icon-box i {
                font-size: 58px;
                position: relative;
                top: 3px;
            }

        .modal-confirm .btn {
            color: #fff;
            border-radius: 4px;
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            border: none;
            min-width: 120px;
            border-radius: 30px;
            margin: 20px 0;
            padding: 10px 20px;
        }

            .modal-confirm .btn:hover, .modal-confirm .btn:focus {
                outline: none;
            }

        .modal-confirm .modal-dialog {
            margin-top: 80px;
        }

        .modal-confirm .modal-content .icon-box {
            background: #d9534f;
        }

        .modal-confirm .modal-content .btn-danger {
            background: #d9534f;
        }

            .modal-confirm .modal-content .btn-danger:hover,
            .modal-confirm .modal-content .btn-danger:focus {
                background: #c9302c;
            }

        .modal-confirm .modal-content .icon-box.success {
            background: #5cb85c;
        }

        .modal-confirm .modal-content .btn-success {
            background: #5cb85c;
        }

            .modal-confirm .modal-content .btn-success:hover,
            .modal-confirm .modal-content .btn-success:focus {
                background: #4cae4c;
            }
</style>

<main role="main">
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6">
                <div class="card p-4">
                    <h5 class="card-title text-center">Login</h5>
                    <form id="loginForm" method="post">
                        @if (ViewData["MSG_E"] != null)
                        {
                            <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                        }
                        <div class="form-group">
                            <label for="Email">Email *</label>
                            <input asp-for="Email" class="form-control" id="email" placeholder="Seu Email" required />
                            <span id="emailError" class="error-message">Por favor, insira um endereço de e-mail válido.</span>
                        </div>
                        <div class="form-group">
                            <label for="Senha">Senha *</label>
                            <div class="input-group">
                                <input asp-for="Senha" class="form-control" id="password" placeholder="Sua Senha" type="password" required />
                                <div class="input-group-append">
                                    <button id="togglePassword" class="btn btn-outline-secondary" type="button">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <span id="passwordError" class="error-message">Senha é obrigatória.</span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                        <small class="form-text text-muted"><a href="~/Home/VerificaEmail">Esqueceu sua senha?</a></small>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-4">
                    <h5 class="card-title text-center">Novo cliente?</h5>
                    <p>Criar uma conta permite que você:</p>
                    <ul>
                        <li>Receba ofertas exclusivas</li>
                        <li>Rastreie seu pedido</li>
                    </ul>
                    <a asp-controller="Home" asp-action="Cadastrar" class="btn btn-outline-primary btn-block">Criar uma conta</a>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#togglePassword').click(function () {
            const passwordField = $('#password');
            const passwordFieldType = passwordField.attr('type');
            const icon = $(this).find('i');

            if (passwordFieldType === 'password') {
                passwordField.attr('type', 'text');
                icon.removeClass('fa-eye').addClass('fa-eye-slash');
            } else {
                passwordField.attr('type', 'password');
                icon.removeClass('fa-eye-slash').addClass('fa-eye');
            }
        });
    });
</script>
