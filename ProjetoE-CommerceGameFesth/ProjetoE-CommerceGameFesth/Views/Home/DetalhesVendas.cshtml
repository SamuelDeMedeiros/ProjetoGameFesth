@model IEnumerable<ProjetoE_CommerceGameFesth.Models.Venda>

@{
    ViewData["Title"] = "DetalhesVendas";
}

<h1>DetalhesVendas</h1>

<div>
    <h4>Venda</h4>
    <hr />
    @foreach (var item in Model)
                            {
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.ValorTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.DataVenda)
        </dd>
    </dl>
                            }
</div>
