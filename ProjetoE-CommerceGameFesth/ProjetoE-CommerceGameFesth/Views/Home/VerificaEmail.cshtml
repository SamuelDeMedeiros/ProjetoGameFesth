@model ProjetoE_CommerceGameFesth.Models.Cliente
@{
    ViewData["Title"] = "VerificaEmail";
}
<
<title>@ViewData["Title"] - ProjetoE_CommerceGameFesth</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 50px;
    }

    .subtitle-doc {
        font-weight: 600;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: 600;
    }

    .form-control {
        border-radius: 50px;
        margin-bottom: 15px;
    }

    .btn-primary {
        border-radius: 50px;
        padding: 10px 30px;
    }

    .alert {
        border-radius: 50px;
    }
</style>

<main role="main">
    <section class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <h3 class="subtitle-doc text-center">Verificação do email</h3>
                <div id="code_login_1">
                    <div class="card">
                        <article class="card-body">
                            @* <a asp-controller="Home" asp-action="VerificarSMS" class="float-right btn btn-outline-primary mt-1">Verificar por SMS</a> *@
                            @if (TempData["MSG_E"] != null)
                            {
                                <p class="alert alert-danger">@Html.Raw(TempData["MSG_E"])</p>
                            }

                            <h4 class="card-title mb-4 mt-1">Email</h4>
                            <form method="post">
                                <div class="form-group">
                                    <label>Coloque seu email para trocar a senha</label>
                                    <input asp-for="Email" class="form-control" placeholder="Email" type="email" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"> Verificar </button>
                            </form>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
