@model ProjetoE_CommerceGameFesth.Models.CadastraEndereco

@{
    ViewData["Title"] = "Cadastrar";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Funcionário</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 20px;
        }

        h4 {
            color: slategrey;
            text-decoration: dashed;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .container {
            width: 100%;
            max-width: 600px;
            background-color: #fff;
            border: 1px solid;
            border-color: dodgerblue;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            box-sizing: border-box;
        }

        .form-group {
            margin-bottom: 20px;
            border-color: dodgerblue;
        }

        .control-label {
            color: slategrey;
        }

        input {
            border-color: blue;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: border-color 0.3s;
            border-color: dodgerblue;
        }

            .form-control:focus {
                border-color: black;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 188, 212, 0.5);
            }

        .btn-primary, .btn-info {
            background-color: dodgerblue;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn-primary:hover, .btn-info:hover {
            color: dodgerblue;
        }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <h4>CADASTRO DE FUNCIONÁRIO</h4>

        <hr />
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="funcionario.NomeFuncionario" class="control-label"></label>
                <input asp-for="funcionario.NomeFuncionario" class="form-control" />
                <span asp-validation-for="funcionario.NomeFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionario.Telefone" class="control-label"></label>
                <input asp-for="funcionario.Telefone" class="form-control" />
                <span asp-validation-for="funcionario.Telefone" class="number"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco.NumLougradouro" class="control-label"></label>
                <input asp-for="endereco.NumLougradouro" class="form-control" />
                <span asp-validation-for="endereco.NumLougradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco.CEP" class="control-label"></label>
                <input asp-for="endereco.CEP" class="form-control cep" placeholder="00000-000" />
                <span asp-validation-for="endereco.CEP" id="cep" name="cep" class="cep-input" maxlength="9" placeholder="00000-000" required></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco.Bairro" class="control-label"></label>
                <input asp-for="endereco.Bairro" class="form-control" />
                <span asp-validation-for="endereco.Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco.Lougradouro" class="control-label"></label>
                <input asp-for="endereco.Lougradouro" class="form-control" />
                <span asp-validation-for="endereco.Lougradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco.NomeUF" class="control-label"></label>
                <input asp-for="endereco.NomeUF" class="form-control" />
                <span asp-validation-for="endereco.NomeUF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco.NomeCidade" class="control-label"></label>
                <input asp-for="endereco.NomeCidade" class="form-control" />
                <span asp-validation-for="endereco.NomeCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionario.Email" class="control-label"></label>
                <input asp-for="funcionario.Email" class="form-control" />
                <span asp-validation-for="funcionario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionario.Senha" class="control-label"></label>
                <input asp-for="funcionario.Senha" class="form-control" />
                <span asp-validation-for="funcionario.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionario.ConfirmaSenha" class="control-label"></label>
                <input asp-for="funcionario.ConfirmaSenha" class="form-control" />
                <span asp-validation-for="funcionario.ConfirmaSenha" class="text-danger"></span>
            </div>
        </form>

        <script>
            document.getElementById('cep').addEventListener('input', function (e) {
                let value = e.target.value;
                value = value.replace(/\D/g, ''); // Remove caracteres não numéricos
                if (value.length > 5) {
                    value = value.replace(/(\d{5})(\d{1,3})/, '$1-$2'); // Formata com hífen
                }
                e.target.value = value;
            });

            document.getElementById('cep').addEventListener('keypress', function (e) {
                const char = String.fromCharCode(e.which);
                if (!/[0-9]/.test(char)) {
                    e.preventDefault();
                }
            });

            document.getElementById('address-form').addEventListener('submit', function (e) {
                const cepInput = document.getElementById('cep');
                const cepValue = cepInput.value;
                const cepError = document.getElementById('cep-error');

                // Validação simples do CEP
                const cepRegex = /^[0-9]{5}-[0-9]{3}$/;
                if (!cepRegex.test(cepValue)) {
                    e.preventDefault();
                    cepError.textContent = 'Por favor, insira um CEP válido no formato 00000-000.';
                } else {
                    cepError.textContent = '';
                }
            });
        </script>



        <div class="buttons">
            <button type="submit" class="btn btn-outline-info btn-block">Cadastrar</button>
            <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>

        </div>
    </div>
</body>
</html>







