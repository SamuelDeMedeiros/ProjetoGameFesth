@model ProjetoE_CommerceGameFesth.Models.CadastraEndereco

@{
    ViewData["Title"] = "Detalhes do funcionario";
}


<br />
<h2>Bem Vindo,  @ViewBag.cargo </h2>

<div>
    <br />
    <h4>Detalhes de funcionario @ViewBag.cargo1</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.funcionario.IdFuncionario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.funcionario.IdFuncionario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.funcionario.NomeFuncionario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.funcionario.NomeFuncionario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.funcionario.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.funcionario.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.funcionario.DataAdmissao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.funcionario.DataAdmissao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.funcionario.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.funcionario.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.funcionario.Senha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.funcionario.Senha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco.CEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco.CEP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco.Lougradouro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco.Lougradouro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco.NomeUF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco.NomeUF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco.NomeCidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco.NomeCidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco.NumLougradouro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco.NumLougradouro)
        </dd>
    </dl>
    <div class="col-lg-3 col-md-6 mb-4" style="margin:2% 4%">
        <input type="hidden" name="sit" value=@Html.DisplayFor(model => model.funcionario.Situacao)>
        @if (ViewBag.sit == "A")
        {
            @using (Html.BeginForm("Desativar", "Funcionario", FormMethod.Post))
            {
                <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.IdFuncionario)>
                <button type="submit" class="btn btn-danger" new { onclick="return confirm('Deseja realmente desativar?')" }>desativar</button>
            }
        }
        else
        {
            @using (Html.BeginForm("Ativar", "Funcionario", FormMethod.Post))
            {

                <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.IdFuncionario)>
                <button type="submit" class="btn btn-primary" new { onclick="return confirm('Deseja realmente ativar?')" }>ativar</button>
            }
        }



    </div>
</div>
<div>

    <a class="btn btn-info" asp-action="Index">Voltar</a>
</div>







