@model ProjetoE_CommerceGameFesth.Models.CadastraEndereco

@{
    ViewData["Title"] = "Detalhes do funcionario";
}
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
    .section-header {
        background-color: #007bff; /* Fundo azul */
        color: white; /* Texto branco */
        padding: 10px; /* Padding para espaçamento interno */
        text-align: center; /* Centraliza o texto */
        border-radius: 5px; /* Arredonda os cantos */
        /* Espaçamento inferior */
    }

    .custom-table {
        width: 100%;
        max-width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
        color: #495057;
        border-collapse: collapse;
        border-spacing: 0;
        border-radius: 10px;
    }

        .custom-table th,
        .custom-table td {
            padding: 0.75rem;
            vertical-align: top;
            border: 1px solid #dee2e6;
        }

        .custom-table th {
            background-color: #e9ecef; /* Fundo cinza claro para cabeçalhos */
            color: #495057; /* Texto escuro para cabeçalhos */
            font-weight: bold; /* Negrito para cabeçalhos */
        }

        .custom-table tbody tr:nth-child(odd) {
            background-color: #f8f9fa; /* Fundo cinza claro para linhas ímpares */
        }

        .custom-table tbody tr:nth-child(even) {
            background-color: #ffffff; /* Fundo branco para linhas pares */
        }

        .custom-table tbody td {
            vertical-align: middle; /* Alinhamento vertical centralizado */
        }

    .actions {
        margin-top: 20px; /* Espaçamento superior */
        text-align: center; /* Centraliza os botões */
    }

        .actions .btn {
            margin: 5px; /* Espaçamento entre botões */
        }
</style>

<br />

<div>
    <br />
    <h4 class="section-header">Detalhes de funcionario @ViewBag.cargo1</h4>
    <hr />
    <table class="table table-bordered border-primary custom-table">
        <tbody>
            <tr>
                <th>@Html.DisplayNameFor(model => model.funcionario.IdFuncionario)</th>
                <td>@Html.DisplayFor(model => model.funcionario.IdFuncionario)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.funcionario.NomeFuncionario)</th>
                <td>@Html.DisplayFor(model => model.funcionario.NomeFuncionario)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.funcionario.Telefone)</th>
                <td>@Html.DisplayFor(model => model.funcionario.Telefone)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.funcionario.DataAdmissao)</th>
                <td>@Html.DisplayFor(model => model.funcionario.DataAdmissao)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.funcionario.Email)</th>
                <td>@Html.DisplayFor(model => model.funcionario.Email)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.funcionario.Senha)</th>
                <td>@Html.DisplayFor(model => model.funcionario.Senha)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.endereco.CEP)</th>
                <td>@Html.DisplayFor(model => model.endereco.CEP)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.endereco.Lougradouro)</th>
                <td>@Html.DisplayFor(model => model.endereco.Lougradouro)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.endereco.NomeUF)</th>
                <td>@Html.DisplayFor(model => model.endereco.NomeUF)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.endereco.NomeCidade)</th>
                <td>@Html.DisplayFor(model => model.endereco.NomeCidade)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.endereco.NumLougradouro)</th>
                <td>@Html.DisplayFor(model => model.endereco.NumLougradouro)</td>
            </tr>
        </tbody>
    </table>

    <div class="actions">
        <input type="hidden" name="sit" value=@Html.DisplayFor(model => model.funcionario.Situacao)>
        @if (ViewBag.Cargo1 != "Gerente")
        {
            @if (ViewBag.sit == "A")
            {
                @using (Html.BeginForm("Desativar", "Funcionario", FormMethod.Post))
                {
                    <div>
                        <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.IdFuncionario)>
                        <button type="submit" class="btn btn-danger" new { onclick="return confirm('Deseja realmente desativar?')" }>desativar</button>
                    </div>
                }
            }
            else
            {
                @using (Html.BeginForm("Ativar", "Funcionario", FormMethod.Post))
                {
                    <div>
                        <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.IdFuncionario)>
                        <button type="submit" class="btn btn-info" new { onclick="return confirm('Deseja realmente ativar?')" }>ativar</button>
                    </div>
                }
            }
            @if (ViewBag.Id == 1)
            {
                @if (ViewBag.cargo1 == "Subgerente")
                {
                    @using (Html.BeginForm("Rebaixar", "Funcionario", FormMethod.Post))
                    {
                        <div>
                            <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.IdFuncionario)>
                            <button type="submit" class="btn btn-danger" new { onclick="return confirm('Deseja realmente rebaixar?')" }>rebaixar</button>
                        </div>
                    }
                }
                else
                {
                    @using (Html.BeginForm("Promover", "Funcionario", FormMethod.Post))
                    {
                        <div>
                            <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.IdFuncionario)>
                            <button type="submit" class="btn btn-info" new { onclick="return confirm('Deseja realmente promover?')" }>Promover</button>
                        </div>
                    }
                }
            }

            @using (Html.BeginForm("Atualizar", "Funcionario", FormMethod.Get))
            {
                <div>
                    <input type="hidden" name="id" value=@Html.DisplayFor(model => model.funcionario.id_Login)>
                    <button type="submit" class="btn btn-outline-info">Atualizar</button>
                </div>
            }
        }
    </div>
</div>

<div>

    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
