@using ProjetoE_CommerceGameFesth.Models.Constants
@inject ProjetoE_CommerceGameFesth.Libraries.Login.LoginFuncionario _funcionario


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>@ViewBag.Title</title>

    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/resources/lib/bootstrap-4.2.1-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/resources/lib/pagedlist/PagedList.css" rel="stylesheet" type="text/css" />

    @*  <link href="~/resources/lib/pagedlist/PagedList.css" rel="stylesheet" type="text/css" /> *@

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

    </style>





    <!-- Custom styles for this template -->
    <link href="~/resources/lib/dashboard/dashboard.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Painel</a>

        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" asp-area="Funcionario" asp-action="Logout" asp-controller="Home"><span>@_funcionario.GetFuncionario().NomeFuncionario </span> Sair</a>
            </li>
        </ul>
    </nav>

    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link active" asp-action="Painel" asp-controller="Home">
                        <span data-feather="home"></span>
                        Painel de Controle
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">
                        <span data-feather="file"></span>
                        Meu perfil
                    </a>
                </li>


                @if (_funcionario.GetFuncionario() != null && _funcionario.GetFuncionario().Tipo == FuncionarioTipoConstant.Gerente)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Funcionario" asp-action="Index">
                            <span data-feather="users"></span>
                            Funcionarios
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cliente" asp-action="Index">
                        <span data-feather="users"></span>
                        Clientes
                    </a>
                </li>

                @* <li class="nav-item">
                <a class="nav-link" asp-controller="Produto" asp-action="Produtos">
                <span data-feather="Produtos"></span>
                Produtos
                </a>
                </li> *@
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Produto">
                        <span data-feather="shopping-cart"></span>
                        Produtos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Venda" asp-action="Index">
                        <span data-feather="bar-chart-2"></span>
                        Vendas
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class=" ml-sm-auto col-lg-10 px-4">

        @RenderBody()

    </main>
    <script src="~/resources/lib/jquery3.3.1/jquery-3.3.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="/resources/lib/jquery3.3.1/jquery-3.3.1.min.js"><\/script>')</script>
    <script src="~/resources/lib/mask/jquery.mask.min.js"></script>
    <script src="~/resources/lib/bootstrap-4.2.1-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/resources/lib/feather/feather.js"></script>
    <script src="~/resources/lib/charts/charts.js"></script>
    <script src="~/resources/lib/dashboard/dashboard.js"></script>
    <script src="~/resources/js/Actions.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>