            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.produto.NomeProduto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.produto.Marca)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.produto.Marca)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.produto.Descricao)
