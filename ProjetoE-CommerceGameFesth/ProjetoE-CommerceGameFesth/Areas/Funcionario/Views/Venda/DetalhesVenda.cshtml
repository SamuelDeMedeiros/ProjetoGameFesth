@using ProjetoE_CommerceGameFesth.Models
@model IEnumerable<ProjetoE_CommerceGameFesth.Models.Produto>


@{
    ViewData["Title"] = "Detalhes";
    int count = 0;
}


<h1>Detalhes</h1>

<div>
    <h4>Venda</h4>
    <tbody>
        <dl class="row">
            <dt class="col-sm-2">
                Nota Fiscal
            </dt>
            <dd class="col-sm-10">
                @ViewBag.NotaFiscal
            </dd>
            <dt class="col-sm-2">
                Valor Total
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Valor
            </dd>

        </dl>
    </tbody>
    <h4>Cliente</h4>
    <tbody>
            <dl class="row">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.Email
                </dd>    
                <dt class="col-sm-2">
                    Nome
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.Nome
                </dd>

            </dl>
    </tbody>

    <h4>Produtos</h4>

    <tbody>
        @foreach (Produto produto in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.First().Codbarras)
                </dt>

                <dd class="col-sm-10">
                    @produto.Codbarras
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.First().NomeProduto)
                </dt>
                <dd class="col-sm-10">
                    @produto.NomeProduto
                </dd>
                <a class="btn btn-primary" asp-route-id="@produto.Codbarras" asp-route-nf="@ViewBag.NotaFiscal" asp-area="Funcionario" asp-controller="Venda" asp-action="DetalhesProduto">Produto</a>
            </dl>
        }

    </tbody>
    <hr />
    
</div>

<div>
    <a asp-action="Index" value="Voltar" class="btn btn-info">Voltar</a>
</div>

