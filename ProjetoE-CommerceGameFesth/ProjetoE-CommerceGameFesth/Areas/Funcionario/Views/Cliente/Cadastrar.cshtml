@model ProjetoE_CommerceGameFesth.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar";
}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 20px;
    }

    h4 {
        color: slategrey;
        text-decoration: dashed;
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .container {
        width: 100%;
        max-width: 600px;
        background-color: #fff;
        border: 1px solid;
        border-color: dodgerblue;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        box-sizing: border-box;
    }

    .form-group {
        margin-bottom: 20px;
        border-color: dodgerblue;
    }

    .control-label {
        color: slategrey;
    }

    input {
        border-color: blue;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: border-color 0.3s;
        border-color: dodgerblue;
    }

        .form-control:focus {
            border-color: black;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 188, 212, 0.5);
        }

    .btn-primary, .btn-info {
        background-color: dodgerblue;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-primary:hover, .btn-info:hover {
        color: dodgerblue;
    }

    .text-danger {
        color: #dc3545;
    }
</style>

<div class="container">
    <h4>CADASTRO DE CLIENTE</h4>

    <hr />
    <form asp-action="Cadastrar">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (TempData["MSG_S"] != null)
        {
            <p class="alert alert-success">@TempData["MSG_S"]</p>
        }

        <div class="form-row">
            <div class="col form-group">
                <label asp-for="NomeCliente">Nome</label>
                <input type="text" asp-for="NomeCliente" class="form-control" placeholder="">
                <span asp-validation-for="NomeCliente"></span>
            </div>
            <div class="col form-group">
                <label asp-for="Nascimento">Nascimento</label>
                <input type="date" asp-for="Nascimento" class="form-control" placeholder="">
                <span asp-validation-for="Nascimento"></span>
            </div>
            <div class="form-group">
                <label class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                    <span class="form-check-label"> Masculino </span>
                </label>
                <label class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                    <span class="form-check-label"> Feminino</span>
                </label>
                <span asp-validation-for="Sexo"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefone">Telefone</label>
                    <input type="number" asp-for="Telefone" class="form-control">
                    <span asp-validation-for="Telefone"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email">E-mail</label>
                <input type="email" asp for="Email" class="email-input" placeholder="seuemail@exemplo.com" required>
                <span asp-validation-for="Email"></span>

            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input class="form-control" asp-for="Senha" type="password">
                <span asp-validation-for="Senha"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary">Cadastrar </button>
            </div>
        </div>
    </form>

    <script>
        document.getElementById('cep').addEventListener('input', function (e) {
            let value = e.target.value;
            value = value.replace(/\D/g, ''); // Remove caracteres não numéricos
            if (value.length > 5) {
                value = value.replace(/(\d{5})(\d{1,3})/, '$1-$2'); // Formata com hífen
            }
            e.target.value = value;
        });

        document.getElementById('cep').addEventListener('keypress', function (e) {
            const char = String.fromCharCode(e.which);
            if (!/[0-9]/.test(char)) {
                e.preventDefault();
            }
        });

        document.getElementById('address-form').addEventListener('submit', function (e) {
            const cepInput = document.getElementById('cep');
            const cepValue = cepInput.value;
            const cepError = document.getElementById('cep-error');

            // Validação simples do CEP
            const cepRegex = /^[0-9]{5}-[0-9]{3}$/;
            if (!cepRegex.test(cepValue)) {
                e.preventDefault();
                cepError.textContent = 'Por favor, insira um CEP válido no formato 00000-000.';
            } else {
                cepError.textContent = '';
            }
        });
    </script>



    <div class="buttons">
        <button type="submit" class="btn btn-outline-info btn-block">Cadastrar</button>
        <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>

    </div>
</div>









